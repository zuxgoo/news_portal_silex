{% extends layout %}

{% block title %}
    {{ title }}
{% endblock %}

{% block content %}
    <h1>{{ title }}</h1>
        {% for post in posts %}
        <h2><a href='/{{ post.name }}/{{ post.id }}'>{{ post.title }}</a></h2>
        <a href='/{{ post.name }}'>{{ post.name|title }}</a> | {{ post.date }}
        <p>{{ post.data }}</p>
    {% endfor %}
{% endblock %}